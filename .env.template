# Environment variables template per ClientSniper
# Copiare questo file in .env.local per sviluppo locale
# Per Vercel: configurare queste variabili nel dashboard Vercel
# Per GitHub Actions: configurare queste variabili nei secrets

# ====== SUPABASE CONFIG ======
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ====== STRIPE CONFIG ======
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ====== SCRAPING ENGINE CONFIG ======
# Stesse variabili per GitHub Actions secrets
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ====== EMAIL SERVICE CONFIG ======
RESEND_API_KEY=re_your_resend_api_key_here
NEXT_PUBLIC_SITE_URL=https://client-sniper-frontend-app.vercel.app
SUPABASE_WEBHOOK_SECRET=your_webhook_secret_here

# Performance settings
MAX_CONCURRENT_SCRAPERS=3
SCRAPE_TIMEOUT_MS=30000
NODE_ENV=production
