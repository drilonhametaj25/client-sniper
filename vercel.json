{
  "version": 2,
  "name": "trovami-pro",
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/reset-credits",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/email-automation",
      "schedule": "0 8 * * *"
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://trovami.pro"
  }
}
